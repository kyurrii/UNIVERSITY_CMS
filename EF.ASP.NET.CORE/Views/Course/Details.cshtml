@model EF.ASP.NET.CORE.ViewModels.CourseStudentAssignment

<form asp-action="Course Details">
    <div class="form-horizontal">
        <h4>Course Details</h4>
        <hr />

        @Html.HiddenFor(m => Model.Id)

        @Html.ActionLink("Home Tasks", "HomeTasks", "HomeTask", new { id = Model.Id }, null)
        <div class="form-group">
            <label class="col-md-5 control-label">@Model.Name</label>
        </div>
        <div class="form-group">
            <label class="col-md-5 control-label">@Model.StartDate</label>
        </div>
        <div class="form-group">
            <label class="col-md-5 control-label">@Model.EndDate</label>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>Students assigned to course:</th>

                </tr>
            </thead>
            <tbody>
                @for (var i = 0; i < Model.Students.Count; i++)
                {
                    <tr>
                        <td>@Model.Students[i].StudentFullName</td>

                        @Html.HiddenFor(m => Model.Students[i].StudentId)
                    </tr>
                }
            </tbody>
        </table>




    </div>
</form>