
@model IEnumerable<EF.ASP.NET.CORE.Models.Course>


<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PassCredits)
            </th>
            <th>
                Hometasks count
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PassCredits)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HomeTasks.Count)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Assign Lecturers", "AssignLecturers", new { id = item.Id }) |
                    @Html.ActionLink("Assign Students", "AssignStudents", new { id = item.Id }) |
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |

                    @Html.ActionLink("Home Tasks", "HomeTasks", "HomeTask", new { id = item.Id }, null)

                </td>
            </tr>
        }
    </tbody>
</table>